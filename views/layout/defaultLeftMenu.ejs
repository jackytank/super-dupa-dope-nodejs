<% if (loginUser.username) { %>
<aside>
	<nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
		<div class="position-sticky">
			<div class="list-group list-group-flush mx-3 mt-4">
				<!-- 1 -->
				<a href="/" class="list-group-item list-group-item-action py-2 ripple <% if(typeof activeTab !== 'undefined') { %> <%= activeTab === 'dashboardTab'? 'active':'' %> <% } %>  " aria-current="true">
					<i class="fas fa-tachometer-alt fa-fw me-3"></i><span>Main dashboard</span>
				</a>
				<!-- 2 -->
				<a href="/admin/users/list" class="list-group-item list-group-item-action py-2 ripple <% if(typeof activeTab !== 'undefined') { %> <%= activeTab === 'listUserTab'? 'active':'' %> <% } %> ">
					<i class="fas fa-chart-area fa-fw me-3"></i><span>User List</span>
				</a>
				<!-- 3 -->
				<% if(loginUser.role !== 1) { %>
				<a href="/admin/users/addPage" class="list-group-item list-group-item-action py-2 ripple <% if(typeof activeTab !== 'undefined') { %> <%= activeTab === 'addUserTab'? 'active':'' %> <% } %> "><i class=" fas fa-lock fa-fw me-3"></i><span>Add user</span></a>
				<% } %>
				<!-- 4 -->
				<a href="/admin/users/contact" class="list-group-item list-group-item-action py-2 ripple <% if(typeof activeTab !== 'undefined') { %> <%= activeTab === 'contactTab'? 'active':'' %> <% } %> ">
					<i class="fas fa-envelope fa-fw me-3"></i><span>Send email</span>
				</a>
			</div>
		</div>
	</nav>
</aside>
<% } %>